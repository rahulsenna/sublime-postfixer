      {
        "caption": "Package Settings",
        "mnemonic": "P",
        "id": "package-settings",
        "children": [
          {
            "caption": "Postfixer",
            "children": [
              {
                "command": "edit_settings",
                "args": {
                  "base_file":
                    "${packages}/Postfixer/Postfixer.sublime-settings",
