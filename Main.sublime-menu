                "caption": "Settings"
              },
              {
                "command": "open_file",
                "args": {
                  "file": "${packages}/User/postfixes.yml"
                },
                "caption": "Snippets"
              },
              {
                "command": "reload_postfixes",
                "caption": "Reload Snippets"
              }
            ]
          }
        ]
      }
    ]
  }
